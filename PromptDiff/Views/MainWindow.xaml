<Window
    x:Class="PromptDiff.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:PromptDiff.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:PromptDiff.ViewModels"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox
            Grid.Row="0"
            ItemsSource="{Binding Paths}"
            KeyDown="ListBox_OnKeyDown">
            <i:Interaction.Behaviors>
                <behaviors:DropPngFilesToPathsBehavior />
            </i:Interaction.Behaviors>
        </ListBox>

        <StackPanel Grid.Row="1">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock Margin="10,0" Text="start offset: " />
                <TextBox Width="70" Text="{Binding StepVariantRequest.StartOffset, UpdateSourceTrigger=PropertyChanged}" />

                <Border Width="40" />

                <TextBlock Margin="10,0" Text="count :" />
                <TextBox Width="70" Text="{Binding StepVariantRequest.Count, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Border
                Height="1"
                Margin="5"
                Background="DarkGray" />
            <Button
                Width="200"
                Margin="5"
                HorizontalAlignment="Right"
                Command="{Binding CopyRequestToClipboardCommand}"
                Content="Copy Requests" />
        </StackPanel>
    </Grid>
</Window>